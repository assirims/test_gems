<% if current_user.has_role? :admin %>
<h2 class="text-danger">Your Role is admin</h2><br />
<% end %>
<% if current_user.has_role? :teacher %>
<h2 class="text-warning">Your Role is teacher</h2><br />
<% end %>
<% if current_user.has_role? :student %>
<h2 class="text-info">Your Role is student</h2><br />
<% end %>

<h1>
  Activity: <%= @activities.count %>
</h1>
<br />

<ul class="list-group">
  <% @activities.each do |activity| %>
    <li class="list-group-item">
      (<%= activity.id  %>)
      <span  class="text-warning">For</span>
      <%= activity.trackable_type %>
      <%= activity.trackable_id %>
      <span  class="text-warning">in </span>
      <%= link_to activity.trackable, activity.trackable %>.
      <span  class="text-warning">This action:</span>
      <span  class="text-light bg-dark">
        <%= activity.key %>
        <%= activity.parameters  %>
      </span>
      <span  class="text-danger">was done by</span>
      <%= activity.owner %>
    </li>
  <% end %>
</ul>
