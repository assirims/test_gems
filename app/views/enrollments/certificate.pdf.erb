    <span><%= image_tag wicked_pdf_asset_base64('logo.png'), height: "90px", width: "auto" %></span>
    <br/><br/>
    <span style="font-size:25px"><b>Certificate url: </b><%= "#{request.base_url}#{request.original_fullpath}" %></span>
