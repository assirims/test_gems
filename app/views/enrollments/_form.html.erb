
<%= simple_form_for(@enrollment) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%#= f.association :course, required: true %>
    <%#= f.association :user %>
    <%= f.input :rating, collection: 0..5, as: :radio_buttons, class: "btn-group" %>
    <%= f.input :review %>
    <%= f.hidden_field :price, value: 0 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-warning" %>
  </div>
<% end %>

