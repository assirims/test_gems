<% content_for :title do %> Website | Editing <%= @enrollment.to_s %><% end %>

<div class="card">
  <div class="card-header">
    <h3>
      <div class="text-warning fa fa-star"></div>
      Add a Review
    </h3>
  </div>
  <div class="card-body text-center">
    <%= render "form", enrollment: @enrollment %>
  </div>
  <br />
  <div class="card-footer">
    <%= link_to 'Show Review', @enrollment, class: "btn btn-primary" %> |
    <%= link_to 'Back to course', course_path(@enrollment.course), class: "btn btn-primary" %>
  </div>
</div>
