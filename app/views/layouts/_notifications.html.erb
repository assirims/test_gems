<%# notification messages %>
<% if flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="text-center alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>" role="alert">
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    </div>
  <% end %>
<% end %>
<% end %>


